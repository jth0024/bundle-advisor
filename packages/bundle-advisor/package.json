{
  "name": "bundle-advisor",
  "version": "0.5.0",
  "type": "module",
  "license": "MIT",
  "description": "A CLI tool to analyze JavaScript bundle stats and suggest performance optimizations.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jth0024/bundle-advisor.git",
    "directory": "packages/bundle-advisor"
  },
  "homepage": "https://github.com/jth0024/bundle-advisor/tree/master/packages/bundle-advisor",
  "keywords": [
    "analyzer",
    "bundle",
    "bundle-analyzer",
    "bundle-optimizer",
    "bundle-stats",
    "cli",
    "load-time",
    "optimization",
    "performance",
    "vite",
    "webpack",
    "web-vitals"
  ],
  "bin": {
    "bundle-advisor": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tailwindcss -i ./src/index.css -o ./dist/index.css && tsc",
    "dev": "tsc --watch",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@types/node": "^20.11.24",
    "typescript": "catalog:",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "commander": "^14.0.2",
    "dedent": "^1.7.0",
    "marked": "^17.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  }
}
